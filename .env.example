# Core API Configuration
OPENAI_API_KEY=your-openai-key-here
NIH_API_BASE=https://api.nih.gov
MODEL=gpt-4o-mini

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./florence.db
# For PostgreSQL: DATABASE_URL=postgresql+asyncpg://user:password@localhost/florence
# For MySQL: DATABASE_URL=mysql+asyncmy://user:password@localhost/florence

# Security Configuration
API_BEARER=your-api-key-here
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production-make-it-long-and-random
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OAuth Configuration (optional)
OAUTH_CLIENT_ID=your-oauth-client-id
OAUTH_CLIENT_SECRET=your-oauth-client-secret

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://example.com

# Rate Limiting Configuration
RATE_LIMIT_PER_MINUTE=60

# Redis Configuration (optional, for distributed caching and rate limiting)
REDIS_URL=redis://redis:6379/0

# Feature Flags
USE_LIVE=0

# Logging Configuration
LOG_LEVEL=INFO

# Monitoring Configuration (optional)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin