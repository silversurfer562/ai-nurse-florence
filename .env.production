# AI Nurse Florence - Production Environment Template
# This file is for Docker/self-hosted deployments
# For Vercel deployment, use Vercel Dashboard to set sensitive variables

# ================================
# PRODUCTION DEPLOYMENT SETTINGS
# ================================

# Application Environment
NODE_ENV=production
PYTHON_ENV=production
DEBUG=false

# ================================
# FEATURE FLAGS (Non-Sensitive)
# ================================

# Enable live external medical APIs
USE_LIVE=true
USE_MYDISEASE=true
USE_MEDLINEPLUS=true
USE_PUBMED=true

# Enable production features
ENABLE_CACHING=true
ENABLE_SECURITY_HEADERS=true
ENABLE_METRICS=false

# ================================
# PUBLIC API ENDPOINTS (Non-Sensitive)
# ================================

# Medical Data APIs (Public URLs)
MYDISEASE_API_URL=https://mydisease.info/v1
MEDLINEPLUS_API_URL=https://connect.medlineplus.gov/service
PUBMED_API_URL=https://eutils.ncbi.nlm.nih.gov/entrez/eutils

# ================================
# PERFORMANCE & CACHING (Non-Sensitive)
# ================================

# Cache Settings
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=150

# ================================
# LOGGING & MONITORING (Non-Sensitive)
# ================================

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_ACCESS_LOGS=true

# Monitoring Settings
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_INTERVAL=60

# ================================
# SERVERLESS CONFIGURATION (Non-Sensitive)
# ================================

# Function Settings
FUNCTION_TIMEOUT=30
FUNCTION_MEMORY=512
VERCEL_REGION=iad1

# ================================
# SENSITIVE VARIABLES
# ================================
# DO NOT SET THESE HERE - Use Vercel Dashboard or secure secret management:
# 
# OPENAI_API_KEY=sk-your-openai-key-here
# API_BEARER=your-secure-bearer-token
# JWT_SECRET_KEY=your-jwt-secret
# DATABASE_URL=postgresql://user:pass@host:5432/db
# REDIS_URL=redis://user:pass@host:6379/0
# NCBI_API_KEY=your-ncbi-key
# CORS_ORIGINS=https://your-domain.com
# GRAFANA_ADMIN_PASSWORD=secure-password

# ================================
# INSTRUCTIONS FOR DEPLOYMENT
# ================================
# 
# For Vercel:
# 1. Set sensitive variables in Vercel Dashboard
# 2. This file provides non-sensitive defaults
# 
# For Docker/Self-hosted:
# 1. Copy this to .env.production.local
# 2. Add your sensitive values to .env.production.local
# 3. Never commit .env.production.local to version control
