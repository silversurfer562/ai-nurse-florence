# AI Nurse Florence - Production Environment Variables
# ‚ö†Ô∏è  CRITICAL: Update ALL security-related variables before production deployment

# ================================
# üîê CRITICAL SECURITY VARIABLES
# ================================

# 1. JWT Secret - Generate a strong random key (CRITICAL!)
JWT_SECRET_KEY=your-secure-jwt-secret-key-here

# 2. API Bearer Token - Generate a secure token (CRITICAL!)
API_BEARER=your-secure-api-bearer-token-here

# 3. OpenAI API Key - Your actual OpenAI key (REQUIRED!)
OPENAI_API_KEY=sk-your-actual-openai-api-key-here

# ================================
# üåê PRODUCTION URLs & DOMAINS
# ================================

# Your production domain
APP_URL=https://ainurseflorence.com
FRONTEND_URL=https://ainurseflorence.com
API_BASE_URL=https://ainurseflorence.com/api/v1

# CORS Origins - Add your production domain
CORS_ORIGINS=["https://ainurseflorence.com","https://www.ainurseflorence.com"]

# ================================
# üóÑÔ∏è PRODUCTION DATABASE
# ================================

# PostgreSQL Database - Update with your production database
DATABASE_URL=postgresql+asyncpg://florence:your-secure-db-password@your-db-host:5432/florence_db
DB_HOST=your-db-host
DB_PORT=5432
DB_NAME=florence_db
DB_USER=florence
DB_PASSWORD=your-secure-db-password

# ================================
# üîÑ PRODUCTION REDIS
# ================================

# Redis Cache - Update with your production Redis
REDIS_URL=redis://your-redis-host:6379/0
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_DB=0

# ================================
# üîí PRODUCTION SECURITY SETTINGS
# ================================

# Environment
NODE_ENV=production
PYTHON_ENV=production
DEBUG=false

# Security Features
ENABLE_SECURITY_HEADERS=true
ENABLE_CACHING=true
ENABLE_METRICS=true

# Rate Limiting (adjust as needed)
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=150

# ================================
# üìä OPTIONAL MONITORING
# ================================

# Grafana Admin (if using monitoring)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=SECURE-GRAFANA-PASSWORD

# NCBI API Key (optional - improves PubMed rate limits)
NCBI_API_KEY=your-ncbi-api-key-here

# ================================
# üîß FEATURE FLAGS
# ================================

# Enable live medical services
USE_LIVE=true
USE_MYDISEASE=true
USE_MEDLINEPLUS=true
USE_PUBMED=true

# ================================
# üìù LOGGING
# ================================

LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_ACCESS_LOGS=true

# ================================
# üöÄ DEPLOYMENT SETTINGS
# ================================

# Health checks
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_INTERVAL=60

# Function settings
FUNCTION_TIMEOUT=60
FUNCTION_MEMORY=1024
