# Local Development Configuration for Epic Demo
# Generated: 2025-10-08

# ================================
# APPLICATION SETTINGS
# ================================
APP_ENV=development
DEBUG=true
APP_VERSION=2.4.2

# ================================
# EPIC INTEGRATION (MOCK MODE)
# ================================
EPIC_MOCK_MODE=true
MOCK_FHIR_SERVER_ENABLED=true
EPIC_FHIR_BASE_URL=http://localhost:8888
EPIC_CLIENT_ID=demo
EPIC_CLIENT_SECRET=demo
EPIC_OAUTH_TOKEN_URL=http://localhost:8888/oauth2/token
EPIC_OAUTH_ENABLED=true

# ================================
# DATABASE (LOCAL SQLITE)
# ================================
DATABASE_URL=sqlite:///./ai_nurse_florence.db
TEST_DATABASE_URL=sqlite:///./test_ai_nurse_florence.db

# ================================
# CACHE (IN-MEMORY FALLBACK)
# ================================
AI_NURSE_DISABLE_REDIS=1
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600

# ================================
# AI PROVIDER (OPTIONAL)
# ================================
# Uncomment and add your key to enable AI features
# AI_PROVIDER=openai
# OPENAI_API_KEY=your-key-here
# OPENAI_MODEL=gpt-4o-mini

# ================================
# MEDICAL SERVICES
# ================================
USE_LIVE_SERVICES=true
USE_LIVE_APIS=true
USE_MYDISEASE=true
USE_MEDLINEPLUS=true
USE_PUBMED=true

# ================================
# SERVER CONFIG
# ================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_RELOAD=true

# ================================
# SECURITY (DEVELOPMENT)
# ================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
API_BEARER=dev-bearer-token-change-in-production
JWT_SECRET_KEY=dev-jwt-secret-change-in-production

# ================================
# LOGGING
# ================================
LOG_LEVEL=INFO
ENABLE_ACCESS_LOGS=true

# ================================
# FEATURE FLAGS
# ================================
ENABLE_SBAR_TEMPLATES=true
ENABLE_CLINICAL_OPTIMIZER=true
ENABLE_DISEASE_LOOKUP=true
ENABLE_DEBUG_ROUTES=true
ENABLE_DOCS=true
